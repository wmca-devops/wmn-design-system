        type: 'primary'
      })
    }}
    {{
      wmndsButton({
        classNames: "wmnds-content-tile__button",
        iconRight: "general-chevron-right",
        text: "I use the bus",
        type: 'primary'
      })
    }}
    {{
      wmndsButton({
        classNames: "wmnds-content-tile__button",
        iconRight: "general-chevron-right",
        text: "I use the train",
        type: 'primary'
      })
    }}
    {{
      wmndsButton({
        classNames: "wmnds-content-tile__button",
        iconRight: "general-chevron-right",
        text: "I use the tram",
        type: 'primary'
      })
    }}
    {{
      wmndsButton({
        classNames: "wmnds-content-tile__button",
        iconRight: "general-chevron-right",
        text: "I walk or cycle",
        type: 'primary'
      }) 
    }}
    {{
      wmndsButton({
        classNames: "wmnds-content-tile__button",
        iconRight: "general-chevron-right",
